+    ssh alioth.debian.org \
+        "psql service=udd -q -P tuples_only" \
+        "-c 'select id, extract(epoch from arrival) from all_bugs where id in ((select max(id) from bugs), (select max(id)-100000 from bugs))'" \
+    | tr -d ' ' \
+    | tr '|' ' '
+) > "${LINTIAN_ROOT:-.}/data/changelog-file/bug-numbers-new"
