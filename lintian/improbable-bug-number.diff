+my $future_bug;
+my $future_bug_timestamp;
+{
+    # Try to predict when a bug with number much bigger than the last one
+    # that was known at the point when lintian was built. To be on safe side,
+    # assume that bugs are filed 4 times faster than they used to.
+    my ($b1, $b2) = sort $new_bugs->all;
+    my ($t1, $t2) = map { int($new_bugs->value($_)) } ($b1, $b2);
+    $future_bug = $b2 + ($b2 - $b1);
+    $future_bug_timestamp = $t2 + ($t2 - $t1) / 4;
+}
